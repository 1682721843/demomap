<%= render 'shared/banner', header: 'Log in' %>
<div class="container justfiy-content-center">
  <div class="row text-align">
    <div class="col-12">
      <p>Do you want to actively participate?
        <br>
      Then please log-in and spread informations.</p>
      <br>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "p-0 m-0"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
<%= render 'shared/footer_blank' %>
