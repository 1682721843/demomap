<%= render 'shared/banner', header: 'Demos#new' %>
  <div class="container justfiy-content-center">
    <div class="row text-align">
      <div class="col-12">
      <p>Find me in app/views/demos/new.html.erb</p>

      <h1>Create your Demo</h1>

                      <%= simple_form_for @demo do |f| %>
                        <%= f.input :name %>
                        <%= f.input :description %>
                        <%= f.button :submit, "Create Profile", class: 'btn btn-secondary w-100' %>
                      <% end %>

      <% if policy(@demo).create? %>
        <%= link_to "New Demo", new_demo_path %>
      <% end %>
      <div
        id="map-two"
        style="width: 100%;
        height: 800px;"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>
<%= render 'shared/footer_general' %>
