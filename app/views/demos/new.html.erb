<%= render 'shared/banner', header: 'Create a new Demo' %>
  <div class="container justfiy-content-center">
    <div class="row text-align">
      <div class="col-12">
      <h1>Create your Demo</h1>
                      <%= simple_form_for @demo do |f| %>
                        <%= f.input :name, required: true %>
                        <%= f.input :description %>
                        <%= f.input :d_hashtag, label: 'Hashtag', hint: 'no #, will be used for twitter feed on comments page', placeholder: 'fridaysforfuture' %>
                        <%= f.input :route, as: :hidden %>
                        <%= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %>
                        <%= f.input :end_time, as: :string, required: true,  input_html: {class: "datepicker"} %>

      <p>Demo Route</p>
      <div
        id="new-demo"
        style="width: 100%;
        height: 800px;"
        data-token="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
      <br><p>You NEED to input a start and end location! You can change them later.</p><br>
      <%= f.button :submit, "Create new Demo", class: 'new-comment-submit btn-light' %>
                      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/footer_general' %>
