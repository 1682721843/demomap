      <h1>Upcoming Demonstrations </h1>

        <% @demos.each do |demo| %>
          <%= link_to demo_path(demo) do %>
            <div class="card-demo">
              <div class="card-demo-infos">
                <div class="card-demo-info-date">
                  <div class="card-demo-info-day">27</div>
                  <div class="card-demo-info-month">Jan</div>
                </div>
                <div class="card-demo-infos-content">
                  <div class="card-demo-infos-content-details">
                    <h2><%= demo.name %></h2>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
