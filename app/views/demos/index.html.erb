      <h1>Upcoming Demonstrations </h1>

        <% @demos.each do |demo| %>
          <%= link_to demo_path(demo) do %>
            <div class="card-demo">
              <div class="card-demo-infos">
                <div class="card-demo-info-date">
                  <div class="card-demo-info-day"><%= demo.start_time.strftime("%d") %></div>
                  <div class="card-demo-info-month"><%= demo.start_time.strftime("%b") %></div>
                </div>
                <div class="card-demo-infos-content">
                  <div class="card-demo-infos-content-details">
                    <h2><%= demo.name %></h2>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
