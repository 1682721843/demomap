<div class='map-container'>

  <div class="map-nav">
    <ul class="nav nav-pills mb-3 nav-fill" id="pills-tab" role="tablist">
      <li class="nav-item ">
        <a class="nav-link active"  id="pills-map-tab" data-toggle="pill" href="#pills-map" role="tab" aria-controls="pills-map" aria-selected="true">map view</a>
      </li>
      <li class="nav-item ">
        <a class="nav-link" id="pills-event-tab" data-toggle="pill" href="#pills-event" role="tab" aria-controls="pills-event" aria-selected="false">list view</a>
      </li>
    </ul>
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-map" role="tabpanel" aria-labelledby="pills-map-tab">
      <div
        id="map"
        style="width: 100%;
        height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
    <div class="tab-pane fade" id="pills-event" role="tabpanel" aria-labelledby="pills-event-tab">
       <% @events.each do |event| %>
        <%= link_to demo_event_path(@demo, event) do %>
           <div class="card-event">
              <div class="card-event-icon"><%= image_tag event.event_type.icon %></div>
              <div class="card-event-content">
                <h2> <%= event.event_type.name %></h2>
                <p> <%= event.description %>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua</p>
                <div class="card-event-footer">
                  <p>
                    <i class="fas fa-map-marker-alt"></i> <%= event.location %>
                  </p>
                  <p>last voted: <strong><%= event.created_at.strftime("%I:%M%p") %></strong></p>
                </div>
              </div>
           </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


