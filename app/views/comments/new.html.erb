<!-- if @event? show option event or generel, else only general comment, activated by default -->

<div class="container justfiy-content-center">
  <div class="row text-align">
    <div class="col-12">
      <div class="comment-box">
        <% if @event.nil? %>
           <p>Share your thoughts and impressions with the other participants of the <strong><%=@demo.name%> Demo</strong>!</p>
          <%= simple_form_for [@demo, @comment] do |f| %>
            <%= f.input :content, label: false, input_html: { class: 'shadow-sm b-white' }%>
            <%= f.button :submit, 'Send', class: "new-comment-submit btn-light shadow-sm bg-white" %>
          <% end %>
        <% else %>
          <p>Share your thoughts and impressions with the other participants regarding the <strong><%=@event.event_type.name %> at <%=@event.location %></strong>!</p>
          <%= simple_form_for [@demo, @event, @comment] do |f| %>
            <%= f.input :content, label: false, input_html: { class: 'shadow-sm b-white' }%>
            <%= f.button :submit, 'Send', class: "new-comment-submit btn-light shadow-sm bg-white" %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
